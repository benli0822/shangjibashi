<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="defaultTemplate" template="/WEB-INF/template/default/layouts/classic.jsp">
        <put-attribute name="title" value=""/>
        <put-attribute name="keywords" value=""/>
        <put-attribute name="description" value=""/>
        <put-attribute name="active" value="" />
        <put-attribute name="banner" value="/WEB-INF/template/default/banner.jsp"/>
        <put-attribute name="menu" value="/WEB-INF/template/default/common_menu.jsp"/>
        <put-attribute name="body" value="/WEB-INF/template/default/home_body.jsp"/>
        <put-attribute name="credits" value="/WEB-INF/template/default/credits.jsp"/>
        <put-attribute name="ie9" value="http://html5shim.googlecode.com/svn/trunk/html5.js"/>
        <put-list-attribute name="javascript">
            <add-attribute value="http://code.jquery.com/jquery-latest.js"/>
            <add-attribute value="/resources/js/bootstrap.min.js"/>
            <add-attribute value="/resources/js/theme.js"/>
        </put-list-attribute>
        <put-list-attribute name="stylesheets">
            <add-attribute value="/resources/css/bootstrap/bootstrap.css"/>
            <add-attribute value="/resources/css/bootstrap/bootstrap-overrides.css"/>
            <add-attribute value="/resources/css/compiled/layout.css"/>
            <add-attribute value="/resources/css/compiled/elements.css"/>
            <add-attribute value="/resources/css/compiled/icons.css"/>
            <add-attribute value="/resources/css/lib/font-awesome.css"/>
            <add-attribute
                    value="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,700italic,800italic,400,300,600,700,800"/>
        </put-list-attribute>
    </definition>

    <definition name="index" extends="defaultTemplate">
        <put-attribute name="title" value="SJBS iMenu System"/>
        <put-attribute name="keywords" value="SJBS iMenu Back-end Management System"/>
        <put-attribute name="description" value="This is a management system for restaurant's menu"/>
        <put-attribute name="active" value="1" />
        <put-attribute name="body" value="/WEB-INF/pages/index.jsp"/>
        <put-list-attribute name="javascript" inherit="true">
            <add-attribute value="/resources/js/jquery-ui-1.10.2.custom.min.js"/>
            <add-attribute value="/resources/js/jquery.knob.js"/>
            <add-attribute value="/resources/js/jquery.flot.js"/>
            <add-attribute value="/resources/js/jquery.flot.stack.js"/>
            <add-attribute value="/resources/js/jquery.flot.resize.js"/>
        </put-list-attribute>
        <put-list-attribute name="stylesheets" inherit="true">
            <add-attribute value="/resources/css/bootstrap/bootstrap-overrides.css"/>
            <add-attribute value="/resources/css/lib/jquery-ui-1.10.2.custom.css"/>
            <add-attribute value="/resources/css/compiled/index.css"/>
            <add-attribute
                    value="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"/>
        </put-list-attribute>
    </definition>

    <definition name="login" extends="defaultTemplate">
        <put-attribute name="title" value="SJBS iMenu Index"/>
        <put-attribute name="keywords" value="SJBS iMenu Back-end Management System"/>
        <put-attribute name="description" value="This is a management system for restaurant's menu"/>
        <put-attribute name="banner" value=""/>
        <put-attribute name="menu" value=""/>
        <put-attribute name="body" value="/WEB-INF/pages/login.jsp"/>
        <put-attribute name="credits" value=""/>
        <put-attribute name="ie9" value="http://html5shim.googlecode.com/svn/trunk/html5.js"/>
        <put-list-attribute name="stylesheets" inherit="true">
            <add-attribute value="/resources/css/compiled/signin.css"/>
        </put-list-attribute>
    </definition>

    <definition name="dishes" extends="defaultTemplate">
        <put-attribute name="title" value="Edit your dishes" />
        <put-attribute name="active" value="2" />
        <put-attribute name="body" value="/WEB-INF/pages/dishes.jsp"/>
    </definition>

</tiles-definitions>